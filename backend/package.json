{
  "name": "backend",
  "version": "0.0.1",
  "description": "Clinicist GraphQL API",
  "main": "index.ts",
  "scripts": {
    "dev": "npm run migrations:up && npm run watch",
    "watch": "nodemon -e ts,js,gql -w . -x npm run serve",
    "serve": "ts-node -r dotenv/config ./index.ts",
    "lint": "eslint . --fix",
    "prettier": "prettier . --write",
    "generate": "ts-node scripts/init-schema.ts && graphql-codegen",
    "generate:migrations": "drizzle-kit generate",
    "migrations:up": "ts-node scripts/run-migrations.ts"
  },
  "author": "Shpetim Selaci",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.5.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.7",
    "@graphql-codegen/typescript-resolvers": "^4.1.0",
    "@types/eslint__js": "^8.42.3",
    "@types/pg": "^8.11.6",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.22.7",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.13.0"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.2",
    "graphql": "^16.8.2",
    "graphql-tag": "^2.12.6",
    "pg": "^8.12.0",
    "pino": "^9.2.0",
    "zod": "^3.23.8"
  }
}
